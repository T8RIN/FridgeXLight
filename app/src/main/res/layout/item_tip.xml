<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="4dp"
    android:layout_weight="1"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/manualBackground"
    app:cardElevation="5dp"
    app:rippleColor="@color/checkedTrans"
    app:shapeAppearanceOverlay="@style/shape12dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/recipe_1"
        android:transitionName="advice"
        app:shapeAppearanceOverlay="@style/shape11dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/manual_gradient_bottom"
        app:shapeAppearanceOverlay="@style/shape11dp" />

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="start"
        android:maxLines="10"
        android:text="@string/category" />

</com.google.android.material.card.MaterialCardView>