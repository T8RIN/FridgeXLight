<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.banned.BannedRecipesFragment">

    <include layout="@layout/circular_loading" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bannedRecipesRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:spanCount="1" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/annotationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:outlineProvider="none"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp">

            <TextView
                android:id="@+id/annotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="@string/annotation7"
                android:textColor="@color/manualText2"
                android:textSize="15sp"
                android:theme="@style/interFont" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/ic_baseline_block_24" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</FrameLayout>